{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard-with-typescript",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["tsconfig.json"]
  },
  "plugins": ["prettier"],
  "rules": {
    "@typescript-eslint/restrict-template-expressions": "off",
    "no-useless-escape": "off"
  }
}
